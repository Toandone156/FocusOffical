                    <div class="instagram__pic__item set-bg" data-setbg="img/instagram/instagram3.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="img/instagram/instagram4.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="img/instagram/instagram6.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="img/instagram/instagram5.jpg"></div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="instagram__text">
                    <h2>Instagram</h2>
                    <p>
                        Focus T-shirt - Passion in every stitch, messages in every shade. Let's tell your story through each thread with us.
                    </p>
                    <h3>#Focus_Offical</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Instagram Section End -->

@section Scripts {
    <script>
        function AddToCart(productId){
            $.ajax({
                url: '/shop/addtocart',
                type: 'POST',
                data: {productId: productId, quantity: 1},
                success: function (response) {
                    if (response.success) {
                        ToastMessage("Add product to cart successfully.", "/shop/cart");
                        let cartNum = document.querySelectorAll(".cart-num");
                        let cartPrice = document.querySelectorAll(".cart-price");

                        cartNum.forEach(n => n.innerHTML = response.numberOfProduct);
                        cartPrice.forEach(e => e.innerHTML = formatCurrency(response.total));

                    } else {
                        ToastMessage(response.message, "");
                    }
                },
                error: function (xhr, status, error) {
                    ToastMessage("Fail to send api", "");
                }
            });
        }
    </script>
}